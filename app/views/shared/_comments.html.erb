

<section class="comment_section">
   <h3 class="grey_text mb_1">Comments</h3>
   <ul>
      <% @comments.each do |comment| %>
         <li class="card">
            <div class="card_title_bar">
               <% if(Current.user.has_role?(:creator, comment)) then %>
                  <%= link_to comment.title, comment %>
               <% else %>
                  <%= comment.title %>
               <% end %>
               <%= comment.creators.distinct.pluck(:email_address) %>
            </div>
            <div class="card_content"><%= comment.content %></div>
         </li>
      <% end %>
   <ul>
   <div class="flex align_end">
      <%= link_to "New comment", new_comment_path(commentable_id:commentable_id, commentable_type:commentable_type) , class: "action_link"  if authenticated? %>
   </div>
</section>