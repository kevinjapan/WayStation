<%= form_with model: task, class: "flex_cols" do |form| %>
   
   <div class="form_row">
     <%= form.label :title %>
     <%= form.text_field :title %>
   </div>

   <div class="form_row">
      <%= form.label :desc %>
      <div><%= form.rich_text_area :desc %></div>
   </div>
 
   <div class="form_row">
     <%= form.label :project_id %>
     <%= form.text_field :project_id, value:@project_id, readonly: true %>
   </div>

   <div class="flex align_end">

      <%= form.submit %>
      
      <% # data passed from view via locals Option : %> 
      <%= link_to "Cancel", cancel_dest, class:"action_link" %>

   </div>
   
 <% end %>
 