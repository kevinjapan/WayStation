<section>

   <section class="artifact_bar">
      <div>
         <h4><span class="grey_text">Project</span> <%= @project.title %></h4>
         <h1><span class="grey_text">Task</span> <%= @task.title %></h1>
         <!--h3><span class="grey_text">id</span> <%= @task.id %></h3-->
      </div>
      <%= link_to "New todo", new_todo_path(task_id:@task.id) , class: "action_link"  if authenticated? %>
   </section>
         
   <p> <%= @task.desc%></p>



   
   <section class="artifacts_list">
      <h3>Todos</h3>
      <ul>
         <% @todos.each do |todo| %>
            <li><%= link_to todo.title, todo %></li>
         <% end %>
      </ul>
   </section>

   <section>
      <!-- alternative: <%= link_to "Back to parent project",  project_path(@project) %>-->
      <%= link_to "Back to parent project", @project %>

      <!-- to do : be aware even if i remove links like this one, the route is still active and will resolve -
                   so i need to either remove route | re-route it | or tidy the page.it routes to -->
      <%= link_to "Back", tasks_path %>
      
      <%= link_to "Edit", edit_task_path(@task, project_id:@project.id) %>
      
   </section>

   <section>
      <%= button_to "Delete", @task, method: :delete, class:"action_link" , data: { turbo_confirm: "Are you sure?" } %>
   </section>

</section>