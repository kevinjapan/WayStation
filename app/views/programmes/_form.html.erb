<%= form_with model: programme, class: "flex_cols" do |form| %>

   <div class="form_row">
     <%= form.label :title %>
     <%= form.text_field :title %>
   </div>

   <div class="form_row">
      <%= form.label :desc %>
      <div><%= form.rich_text_area :desc %></div>
   </div>
 
   <div class="flex align_end">
     <%= form.submit %>
   <%= link_to "Cancel", programmes_path, class:"action_link" %>
   </div>
   
 <% end %>
 