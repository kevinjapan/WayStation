<%= form_with model: programme, class: "flex_cols" do |form| %>

   <div class="form_row">
     <%= form.label :title %>
     <%= form.text_field :title %>
   </div>

   <div class="form_row">
      <%= form.label :desc %>
      <div><%= form.rich_text_area :desc %></div>
   </div>
 
   <div class="form_row">
     <%= form.submit %>
   </div>
   
 <% end %>
 