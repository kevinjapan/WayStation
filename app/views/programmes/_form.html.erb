
<%= form_with model: programme, class: "flex_cols" do |form| %>

   <div class="form_row">
      <%= form.label :title %>

      <!-- 
     
     to do : 'onkeydown' will just keep toggling 'inactive_btn' class - but 'onchange' not working..? 
               once resolved, rollout all _form.html.erb views
      
      -->
     <%= form.text_field :title, onkeydown: "HelperJS.enable_btn('submit_new_btn')" %>
   </div>

   <div class="form_row">
      <%= form.label :desc %>
      <div><%= form.rich_text_area :desc %></div>
   </div>
 
   <div class="flex align_end">
      <%= form.submit id: "submit_new_btn" , class: "inactive_btn" %>
      <%= link_to "Cancel", programme, class:"action_link " %>
   </div>
   
 <% end %>
 