<section>

   <section class="artifact_bar">
      <div>
         <%= link_to programme_path(@programme), class: "p_0.25 m_0 no_decor inline_block hover_highlight" do %>
            <h4><span class="grey_text ">Programme</span> <%= @programme.title %></h4>
         <% end %>
         <h1><!--span class="grey_text">Project</span--> <%= @project.title %></h1>
         <!--h3><span class="grey_text">id</span> <%= @project.id %></h3-->
      </div>
      <%= link_to "New task", new_task_path(project_id:@project.id) , class: "action_link"  if authenticated? %>
   </section>
   
   <p> <%= @project.desc%></p>

   <section class="artifacts_list">
      <h3>Tasks</h3>
      <ul>
         <% @tasks.each do |task| %>
            <li><%= link_to task.title, task %></li>
         <% end %>
      </ul>
   </section>

   <section>

      <%= link_to "Back to parent programme",  programme_path(@programme) %>

      <!-- back to generic 'all' projects list -->
      <%= link_to "Back", projects_path %>

      <%= link_to "Edit", edit_project_path(@project, programme_id:@programme.id) %>

   </section>

   <section>
      <%= button_to "Delete", @project, method: :delete, class:"action_link" , data: { turbo_confirm: "Are you sure?" } %>
   </section>
   
</section>
