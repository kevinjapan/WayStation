<h1>All Projects</h1>

<section>
   <ul class="all_artifacts_list">
      <% @augmented_projects.each do |project,programme| %>
         <li>
            <%= link_to project.title, project %>
            <span class="parent_token">
               <span class="grey_text">programme :  </span>
               <%= link_to programme.title, programme %>

               <% if(project.creators.length > 0) then %>
                  <div>creator: <%= project.creators.distinct.pluck(:name) %></div>
               <% end %>
               <% if(project.users.length > 0) then %>
                  <div>users: <%= project.users.distinct.pluck(:name) %></div>
               <% end %>

            </span>
         </li>
      <% end %>
   </ul>
</section>
