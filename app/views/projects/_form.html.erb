<%= form_with model: project, class: "flex_cols" do |form| %>

   <div class="form_row">
     <%= form.label :title %>
     <%= form.text_field :title %>
   </div>

   <div class="form_row">
      <%= form.label "Tagline" %>
      <%= form.text_area :tagline, rows: 3 %>
   </div>
   
   <div class="form_row">
     <%= form.label :programme_id %>
     <%= form.text_field :programme_id, value:@programme_id, readonly: true %>
   </div>

   <div class="flex align_end">

      <%= form.submit %>

      <% # data passed from view via locals Option : %> 
      <%= link_to "Cancel", cancel_dest, class:"action_link" %>

   </div>

 <% end %>
 