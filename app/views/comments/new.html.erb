<section>
   <h1>New comment</h1>

   <section class="flex gap_1">
      <p>
         Adding comment to 
         <span class="parent_token">
            <span class="grey_text"><%=@commentable_type%> :  </span> 
            <span class="bold_text"> <%= @commentable.title %></span>
         </span>
      </p>
   </section>

   <section>
      <%= render "form", comment: @comment %>
   </section>
</section>