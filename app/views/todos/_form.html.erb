<%= form_with model: todo, class: "flex_cols" do |form| %>
   
   <div class="form_row">
     <%= form.label :title %>
     <%= form.text_field :title %>
   </div>
 
   <div>
     <%= form.label :task_id %>
     <%= form.text_field :task_id, value:@task_id, readonly: true %>
   </div>
 
   <div class="flex align_end">
   
      <%= form.submit %>

      <% # data passed from view via locals Option : %> 
      <%= link_to "Cancel", cancel_dest, class:"action_link" %>

   </div>

 <% end %>
 